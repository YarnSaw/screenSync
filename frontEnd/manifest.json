{
  "manifest_version": 2,

  "name": "ScreenSync",
  "description": "Sync multiple browsers on different computers for collaboration!",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["socket.io.js", "background.js"]
  }, 
  "action": {
    "default_icon":{
      "16": "images/Icon_Image16.png",
      "32": "images/Icon_Image32.png"
    }
  },
    "icons":{
      "16":"images/Icon_Image16.png",
      "32":"images/Icon_Image32.png",
      "48":"images/Icon_Image48.png",
      "128":"images/Icon_Image128.png"

      },
  "permissions": ["tabs", "<all_urls>", "storage", "notifications"]
}
